<%= form_for(@codroo) do |c| %>
  <% if @codroo.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@codroo.errors.count, "error") %></h2>
    <ul>
    <%= @codroo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= c.label :name %><br />
    <%= c.text_field :name %>
  </div>

  <div class="field">
    <%= c.label :description %><br />
    <%= c.text_area :description %>
  </div>

  <div class="field">
    <%= c.label :formula %><br />
    <%= c.text_field :formula %><br />
  </div>

  <div class="actions">
    <%= c.submit %>
  </div>
<% end %> 
